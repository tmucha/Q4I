							<span class="{{ p.header.highlight }}">[QUESTION #{{ p.header.article.number }}]:</span>
						</h3>
						<h3>{{ p.header.article.title }}</h3>
		    		{% endif %}
		    		{% if p.header.article.expert == true %}
						{% set image = p.media.images|first %}
				    {% endif %}
